---
import { sections } from "../data/sections";
import NavItem from "./NavItem.astro";
import BurgerIcon from "./icons/BurgerIcon.astro";
---

<nav
  class="sticky top-0 z-20 mb-6 flex justify-center rounded-md bg-primary shadow-dark-lg md:rounded-full md:bg-white md:bg-opacity-50 md:backdrop-blur-lg"
>
  <div
    class="mx-auto flex w-full max-w-screen-xl flex-wrap items-center justify-between p-4 md:justify-evenly"
  >
    <div class="flex space-x-3 md:hidden">
      <button id="menu-button" class="focus:outline-none">
        <span class="sr-only">Open main menu</span>
        <BurgerIcon class="size-8 text-white" />
      </button>
    </div>
    <div
      id="menu-open"
      class="absolute left-0 top-12 z-50 hidden w-full rounded-b bg-primary shadow-dark-lg md:static md:block md:bg-inherit md:shadow-none"
    >
      <ul
        class="flex flex-col gap-5 p-4 md:mt-0 md:flex-row md:justify-evenly md:border-0 md:p-0"
      >
        {sections.map(({ title, id }) => <NavItem title={title} id={id} />)}
      </ul>
    </div>
  </div>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const button = document.querySelector("#menu-button");
    const menuOpen = document.querySelector("#menu-open");

    button?.addEventListener("click", () => {
      menuOpen!.classList.toggle("hidden");
    });
  });
  const navLinks = document.querySelectorAll('a[href^="#"]');

  function scrollToSection(e: Event) {
    e.preventDefault();
    const targetId = (e.target as HTMLAnchorElement).hash;
    const targetElement = document.querySelector(targetId) as HTMLElement;
    const menuOpen = document.querySelector("#menu-open");

    if (targetElement) {
      const navbarHeight = 75;
      const offsetPosition = targetElement.offsetTop - navbarHeight;

      window.scrollTo({
        top: offsetPosition,
        behavior: "smooth"
      });
      menuOpen!.classList.add("hidden");
    }
  }

  // Attach click event listeners to all navigation links
  navLinks.forEach((link) => {
    link.addEventListener("click", (event) => {
      scrollToSection(event);
    });
  });
</script>
