---
import LinkIcon from "../icons/LinkIcon.astro";

interface Props {
  width: string;
  height: string;
  linkClass?: string;
  iconClass?: string;
  href: string;
}

const { width, height, linkClass, iconClass, href }: Props = Astro.props;
---

<a
  class={`cursor-pointer ${linkClass || ""}`}
  href={href}
  target="_blank"
  aria-label="Linkedin Profile"
>
  <LinkIcon width={width} height={height} iconClass={iconClass} />
</a>
