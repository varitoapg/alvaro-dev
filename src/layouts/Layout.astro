---
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="I'm Álvaro Parada García, I work as Full Stack developer and this is my portfolio"
    />
    <title>{title}</title>
  </head>
  <body
    class="dark:text-main-text-dark dark:bg-backgroud-dark mx-auto max-w-screen-md bg-background font-main-font text-main-text"
  >
    <main>
      <slot />
    </main>
  </body>
  <Footer />
</html>
